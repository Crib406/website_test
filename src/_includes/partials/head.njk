<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/svg+xml" href="{{ site.url }}/assets/images/favicon/favicon-32x32.png?v={{ build.timestamp }}">
    <title>{{ siteseo.title }}</title>

    <!-- Meta -->
    <meta name="description" content="{{ siteseo.metaundogDescription }}" />
    <meta name="robots" content="index,follow" />
    {% if page.url == '/404.html' %}
      <meta name="robots" content="noindex, nofollow">
    {% endif %}
    <link rel="canonical" href="{{ site.url }}{{ page.url }}" />
    <link rel="icon" href="{{ site.url }}/assets/images/favicon/favicon-32x32.png?v={{ build.timestamp }}" type="image/x-icon" />

    <!-- Cache deaktivieren -->
    <meta http-equiv="Cache-Control" content="no-cache, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">

    <!-- Open Graph -->
    <meta property="og:locale" content="de_DE" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ siteseo.title }}" />
    <meta property="og:description" content="{{ siteseo.metaundogDescription }}" />
    <meta property="og:url" content="{{ site.url }}{{ page.url }}" />
    <meta property="og:site_name" content="Christoph B. Reimann" />
    <meta property="og:image" content="{{ site.url }}/assets/images/about/preview.png?v={{ build.timestamp }}" />
    <meta property="og:image:alt" content="Portrait von Christoph B. Reimann aus Bad Harzburg" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ siteseo.title }}" />
    <meta name="twitter:description" content="{{ siteseo.metaundogDescription }}" />
    <meta name="twitter:image" content="{{ site.url }}/assets/images/about/preview.png?v={{ build.timestamp }}" />

    <!-- 100% privacy-first analytics -->
    <script async src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
    <script src="https://cdn.counter.dev/script.js" data-id="49810d93-4338-4e6c-9b58-02ab2a6bd2fe" data-utcoffset="1"></script>

    <!-- JSON-LD -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Christoph B. Reimann",
      "alternateName": ["Christoph Reimann","Christoph Bruno Reimann","Reimann"],
      "jobTitle": "Mensch · Betriebswirt · Generalist",
      "url": "{{ site.url }}",
      "image": "{{ site.url }}/assets/images/about/preview.png?v={{ build.timestamp }}",
      "description": "{{ siteseo.personDescription }}",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Bad Harzburg",
        "addressRegion": "Niedersachsen",
        "addressCountry": "DE"
      },
      "homeLocation": {
        "@type": "Place",
        "name": "Bad Harzburg (Harz), Landkreis Goslar",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Bad Harzburg",
          "addressRegion": "Niedersachsen",
          "addressCountry": "DE"
        }
      },
      "areaServed": [
        "Bad Harzburg",
        "Harz",
        "Landkreis Goslar",
        "Niedersachsen"
      ],
      "worksFor": {
        "@type": "Organization",
        "name": "Aktuell offen für eine neue Aufgabe im Mittelstand",
        "url": "{{ site.url }}"
      },
      "alumniOf": [
        {
          "@type": "CollegeOrUniversity",
          "name": "DHBW Mosbach",
          "sameAs": "https://www.mosbach.dhbw.de/"
        }
      ],
      "hasCredential": [
        {
          "@type": "EducationalOccupationalCredential",
          "name": "Duales Studium Holzbetriebswirtschaftslehre (BWL)",
          "awardingBody": {
            "@type": "CollegeOrUniversity",
            "name": "DHBW Mosbach",
            "sameAs": "https://www.mosbach.dhbw.de/"
          }
        },
        {
          "@type": "EducationalOccupationalCredential",
          "name": "Ausbildung zum Groß- und Außenhandelskaufmann",
          "credentialCategory": "Apprenticeship"
        },
        {
          "@type": "EducationalOccupationalCredential",
          "name": "Individualpsychologischer Berater (ADI)",
          "awardingBody": {
            "@type": "Organization",
            "name": "Adler-Dreikurs-Institut (ADI)",
            "sameAs": "https://www.adler-dreikurs-institut.de/"
          }
        }
      ],
      "hasOccupation": {
        "@type": "Occupation",
        "name": "Organisationsentwickler und Generalist im Mittelstand",
        "description": "Verbindet betriebswirtschaftliches Denken mit psychologischer Kompetenz und technischer Praxis, um Zusammenarbeit wirksam zu gestalten."
      },
      "skills": [
        "Führen auf Augenhöhe",
        "Ermutigende Führung",
        "Vielseitigkeit",
        "Lernbereitschaft",
        "Prozessgestaltung",
        "Organisationsentwicklung",
        "Psychologische Sicherheit",
        "Klarheit & Struktur"
      ],
      "sameAs": [
        "https://www.linkedin.com/in/christoph-b-reimann-192328227/"
      ],
      "knowsAbout": [
        "Fehlerkultur",
        "Prozessgestaltung",
        "Change im Mittelstand",
        "Organisationsentwicklung",
        "Leadership",
        "Führung",
        "Psychologie",
        "Individualpsychologie",
        "Scrum",
        "Agiles Arbeiten",
        "Menschenkenntnis",
        "Faires Miteinander",
        "Verbindungen schaffen",
        "Menschen"
      ]
    }
    </script>

    {% if jsonld %}
        <script type="application/ld+json">
            {{ jsonld | json | safe }}
        </script>
    {% endif %}

    <!-- CSS -->
    <link rel="stylesheet" href="{{ site.baseurl }}/assets/css/vendor/fontawesome.css?v={{ build.timestamp }}">
    <link rel="stylesheet" href="{{ site.baseurl }}/assets/css/plugins/swiper.css?v={{ build.timestamp }}">
    <link rel="stylesheet" href="{{ site.baseurl }}/assets/css/plugins/odometer.css?v={{ build.timestamp }}">
    <link rel="stylesheet" href="{{ site.baseurl }}/assets/css/vendor/animate.min.css?v={{ build.timestamp }}">
    <link rel="stylesheet" href="{{ site.baseurl }}/assets/css/vendor/bootstrap.min.css?v={{ build.timestamp }}">
    <link rel="stylesheet" href="{{ site.baseurl }}/assets/css/style.css?v={{ build.timestamp }}">
</head>
